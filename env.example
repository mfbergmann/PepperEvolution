# Pepper Robot Configuration
PEPPER_IP=192.168.1.100
PEPPER_PORT=9559
PEPPER_USERNAME=nao
PEPPER_PASSWORD=nao

# AI Model Configuration
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here
AI_MODEL=gpt-5
AI_TEMPERATURE=0.7
AI_MAX_TOKENS=1000

# Communication Settings
WEBSOCKET_HOST=0.0.0.0
WEBSOCKET_PORT=8765
API_HOST=0.0.0.0
API_PORT=8000

# Logging
LOG_LEVEL=INFO
LOG_FILE=pepper_evolution.log

# Security
SECRET_KEY=your_secret_key_here
ALLOWED_ORIGINS=["http://localhost:3000", "http://localhost:8080"]

# Camera and Sensor Settings
CAMERA_RESOLUTION=640x480
CAMERA_FPS=30
SENSOR_UPDATE_RATE=10

# Audio Settings
AUDIO_SAMPLE_RATE=16000
AUDIO_CHANNELS=1
AUDIO_FORMAT=wav

# Memory and Storage
MEMORY_ENABLED=true
MEMORY_FILE=pepper_memory.json
DATA_DIR=./data
